<%- include("../partials/default/header") %> 
<%- include("../partials/default/breadCrumb") %>
<%- include("../partials/messages") %> 
        <!-- Login Section Starts -->
        <section class="login-section padding-120">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="login-image">
                            <img src="/assets/images/login-image.jpg" alt="image">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="login-form">
                            <h3>signup <span>now</span></h3>
                            <div class="google-button">
                                <a href="#" class="template-button"><i class="fab fa-google"></i> google</a>
                            </div>
                            <span class="separator">or</span>
                            <div class="login-tab">
                                <div class="tab">
                                    <ul>
                                        <li class="tab-second">
                                            <a href="/auth/register" class="template-button-2">instructor</a>
                                        </li>
                                        <li class="tab-three">
                                            <a href="/auth/student" class="template-button-2">student</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="tab-content margin-top-30">
                                <div class="tab-second-content lost active">
                                    <form action="/auth/register" method="POST">
                                        <div class="form-group">
                                            <label for="signupName2"><i class="fa fa-user"></i> Your Name</label>
                                            <input type="type" name="name" id="name" placeholder="Your Name" value="<%= typeof name != 'undefined' ? name : '' %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="signupEmail2"><i class="fa fa-envelope"></i> Email Address</label>
                                            <input type="email" name="email" id="email" placeholder="Email Address" value="<%= typeof email != 'undefined' ? email : '' %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="signupPhone"><i class="fa fa-envelope"></i> Phone Number</label>
                                            <input type="tel" name="phone" id="phone" placeholder="Enter phone" value="<%= typeof phone != 'undefined' ? phone : '' %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="signupPassword2"><i class="fa fa-lock"></i> Password</label>
                                            <input type="password" name="password" id="password" placeholder="Password" value="<%= typeof password != 'undefined' ? password : '' %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="signupConPassword2"><i class="fa fa-lock"></i> Confirm Password</label>
                                            <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" value="<%= typeof confirmPassword != 'undefined' ? confirmPassword : '' %>">
                                        </div>
                                        <div class="checkbox-forgotpass-area">
                                            <!-- <div class="checkbox-part">
                                                <input type="checkbox" id="signupRemember2">
                                                <label for="signupRemember2"> remember me</label>
                                            </div> -->
                                            <div class="forgotpass-part">
                                                <a href="#">forgot password?</a>
                                            </div>
                                        </div>
                                        <div class="login-button margin-top-20">
                                            <input type="submit" class="template-button" value="Register">
                                            <!-- <a href="#" class="template-button">login account</a> -->
                                            <span>already have an account? <a href="/auth/login">login</a></span>
                                        </div>
                                    </form>
                                </div>

                                <div class="tab-three-content lost">
                                    <form action="/auth/student" method="POST">
                                        <div class="form-group">
                                            <label for="signupName2"><i class="fa fa-user"></i> Your Name</label>
                                            <input type="type" name="name" id="name" placeholder="Your Name" value="<%= typeof name != 'undefined' ? name : '' %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="signupEmail2"><i class="fa fa-envelope"></i> Email Address</label>
                                            <input type="email" name="email" id="email" placeholder="Email Address" value="<%= typeof email != 'undefined' ? email : '' %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="signupPhone"><i class="fa fa-envelope"></i> Phone Number</label>
                                            <input type="tel" name="phone" id="phone" placeholder="Email Address" value="<%= typeof phone != 'undefined' ? phone : '' %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="signupPassword2"><i class="fa fa-lock"></i> Password</label>
                                            <input type="password" name="password" id="password" placeholder="Password" value="<%= typeof password != 'undefined' ? password : '' %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="signupConPassword2"><i class="fa fa-lock"></i> Confirm Password</label>
                                            <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" value="<%= typeof confirmPassword != 'undefined' ? confirmPassword : '' %>">
                                        </div>
                                        <div class="checkbox-forgotpass-area">
                                            <!-- <div class="checkbox-part">
                                                <input type="checkbox" id="signupRemember2">
                                                <label for="signupRemember2"> remember me</label>
                                            </div> -->
                                            <div class="forgotpass-part">
                                                <a href="#">forgot password?</a>
                                            </div>
                                        </div>
                                        <div class="login-button margin-top-20">
                                            <input type="submit" class="template-button" value="Register">
                                            <!-- <a href="#" class="template-button">login account</a> -->
                                            <span>already have an account? <a href="/auth/login">login</a></span>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
<%- include("../partials/default/footer") %> 
        