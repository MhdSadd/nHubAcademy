                    <div class="lms-single-widget">
                        <div class="lms-widget-title">
                            <h4>instructor</h4>
                        </div>
                        <select name="instructor" id="instructor">
                            <option value="all instructor" selected>all instructor</option>
                            <% instructor.forEach(instructor => { %>
                                <option value="<%= instructor.name %> "><%= instructor.name %></option>
                            <% }) %>
                        </select>

                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="row">
                    <% dataScience.forEach(dataScience => { %>
                        <div class="col-md-6">
                            <div class="single-course-item">
                                <div class="course-image">
                                    <img src="<%= dataScience.courseImage %>" alt="image">
                                </div>
                                <div class="course-content margin-top-30">
                                    <div class="course-title">
                                        <h4><%= dataScience.courseName %> </h4>
                                    </div>
                                    <div class="course-instructor-rating margin-top-20">
                                        <div class="course-instructor">
                                            <!-- <img src="/assets/images/course-instructor-1.png" alt="instructor"> -->
                                            <h6><%= dataScience.instructor %></h6>
                                        </div>
                                        <!-- <div class="course-rating">
                                            <ul>
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                            </ul>
                                            <span>4.2(30)</span>
                                        </div> -->

                                    </div>
                                    <div class="course-info margin-top-20">
                                        <div class="course-view">
                                            <i class="fa fa-eye"></i>
                                            <span>2,500 views</span>
                                        </div>
                                        <!-- <div class="course-video">
                                            <i class="fas fa-play-circle"></i>
                                            <span>36 lectures</span>
                                        </div> -->
                                        <div class="course-time">
                                            <i class="fa fa-clock-o"></i>
                                            <span><%= dataScience.duration %></span>
                                        </div>
                                    </div>
                                    <div class="course-price-cart margin-top-20">
                                        <div class="course-price">
                                            <span class="span-big"> <%= dataScience.promo %> off</span>
                                            <span class="span-cross">&#8358; <%= dataScience.price %></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="hover-state" style="background-color: rgb(243, 201, 123);">
                                    <span class="heart-icon"><i class="fas fa-heart"></i></span>
                                    <span class="title-tag">by instructor</span>
                                    <div class="course-title margin-top-10">
                                        <h4><a href="#"><%= dataScience.courseName %></a></h4>
                                    </div>
                                    <div class="course-price-info margin-top-20">
                                        <span class="best-seller">best seller</span>
                                        <!-- <span class="course-category"><a href="#"><%= dataScience.courseName %></a></span> -->
                                        <span class="course-price">&#8358; <%= dataScience.price %></span>
                                    </div>
                                    <div class="course-info margin-top-30">
                                        <div class="course-enroll">
                                            <span>enrolled 0</span>
                                        </div>
                                        <!-- <div class="course-video">
                                            <i class="fas fa-play-circle"></i>
                                            <span>36 lectures</span>
                                        </div> -->
                                        <div class="course-time">
                                            <i class="fa fa-clock-o"></i>
                                            <span><%= dataScience.duration %></span>
                                        </div>
                                    </div>
                                    <p class="margin-top-20"><%= dataScience.description %></p>
                                    <!-- <ul class="margin-top-20">
                                        <li><i class="fas fa-circle"></i><span>Lorem ipsum dolor sit amet.</span></li>
                                        <li><i class="fas fa-circle"></i><span>Consectetur adipisicing elit.</span></li>
                                        <li><i class="fas fa-circle"></i><span>Placeat dolore quaerat itaque.</span></li>
                                    </ul> -->
                                    <div class="preview-button margin-top-20">
                                        <a href="/courses/single-package/<%= dataScience._id %> " class="template-button">course preview</a>
                                        <!-- <a href="#" class="template-button margin-left-10">add to cart</a> -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include("../partials/default/footer") %> 