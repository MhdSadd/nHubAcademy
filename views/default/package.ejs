<%- include("../partials/default/header") %> 
<%- include("../partials/default/breadCrumb") %> 
<%- include("../partials/messages") %> 
        <section class="package-section padding-top-120">
            <div class="container">
                <div class="row">
                    <%courses.forEach(courses => { %>
                        <div class="col-lg-4 col-md-6">
                            <div class="single-package-item">
                                <div class="package-offer blue-bg">
                                    <%if (courses.promo) {%>
                                        <span><%= courses.promo %> Off</span>
                                    <% }  else { %>

                                    <% } %>
                                </div>
                                <div class="package-offer-price orange-bg">
                                    <%if (courses.price) {%>
                                        <span style="font-weight: bolder;">&#8358; <%= courses.price %></span>
                                    <% }  else { %>
                                    <% } %>
                                </div>
                                <div class="package-content">
                                    <!-- <div class="package-icon template-icon blue-icon">
                                        <i class="icofont-library"></i>
                                    </div> -->
                                    <div class="package-title">
                                        <h4><%= courses.courseName %> </h4>
                                    </div>
                                    <!-- <p class="margin-top-20"><%= courses.description %> </p> -->
                                </div>
                                <div class="package-image">
                                    <div>
                                    <img src="<%= courses.courseImage %> " style="height: 250px;" alt="image">
                                    </div>
                                   
                                    <div style="background-color: orange; height: 2rem;">
                                    <a href="/courses/single-package/<%= courses._id %> " style="color: white; font-weight: bolder;">View course</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% })%>
                
                </div>
            </div>
        </section>
<%- include("../partials/default/footer") %> 